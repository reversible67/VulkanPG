<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <PropertyPageSchema Include="$(MSBuildThisFileDirectory)glsl.xml" />
    <AvailableItemName Include="GLSLShader">
      <Targets>GLSL</Targets>
    </AvailableItemName>
  </ItemGroup>

  <Target
    Name="GLSL"
    Inputs="@(GLSLShader)"
    Outputs="@(GLSLShader -> '%(FullPath).spv')"
    BeforeTargets="ClCompile">
  
  	<Message Importance="High" Text="---------- Compiling shaders ----------" />
    <!-- Hacky way to ensure creation of required directories -->
  	<Exec Command="@(GLSLShader -> '$(VULKAN_SDK)\Bin\glslangValidator.exe -V --target-env vulkan1.2 %(FullPath) -o %(FullPath).spv', ' &#38; ')" />
    <Exec Command="@(GLSLShader -> '$(VULKAN_SDK)\Bin\spirv-opt -O --scalar-block-layout %(FullPath).spv -o %(FullPath).spv', ' &#38; ')" />
  </Target>
</Project>